<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="DefaultTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="BlankDialog" parent="android:Theme.DeviceDefault.Light.Dialog">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>
	<style name="FillWidth">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="FillBoth">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>
	<style name="BlueBar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">50dp</item>
	</style>
	<style name="NoDimDialog" parent="android:Theme.DeviceDefault.Light.Panel">
		<item name="android:backgroundDimAmount">0.0</item>
		<item name="android:backgroundDimEnabled">false</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="TopBlueBar">
		<item name="android:layout_height">50dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:padding">9dp</item>
		<item name="android:scaleType">fitCenter</item>
		<item name="android:background">@drawable/btn_bluebar_top</item>
	</style>
	<style name="BotBlueBar">
		<item name="android:layout_height">50dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:padding">9dp</item>
		<item name="android:scaleType">fitCenter</item>
		<item name="android:background">@drawable/btn_bluebar_bot</item>
	</style>
</resources>