<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android">
	<TableRow
	android:id="@+id/table_01">
		<com.chess.genesis.MyImageView
		android:id="@+id/topbar_genesis"
		style="@style/FillWidth"
		android:layout_weight="82"
		android:src="@drawable/topbar_genesis"/>
		<com.chess.genesis.MyImageView
		android:id="@+id/topbar_plus"
		style="@style/FillWidth"
		android:layout_weight="407"
		android:src="@drawable/topbar_plus"/>
	</TableRow>
	<TableRow
	android:id="@+id/table_02"
	style="@style/FillWidth"
	android:layout_below="@id/table_01">
		<com.chess.genesis.MyImageView
		android:id="@+id/your_move"
		style="@style/FillWidth"
		android:layout_weight="50"
		android:src="@drawable/yourmove_selected"/>
		<com.chess.genesis.MyImageView
		android:id="@+id/their_move"
		style="@style/FillWidth"
		android:layout_weight="50"
		android:src="@drawable/theirmove_notselected"/>
	</TableRow>
	<com.chess.genesis.MyImageView
	android:id="@+id/move_divider"
	style="@style/FillWidth"
	android:layout_below="@id/table_02"
	android:src="@drawable/move_divider"/>
	<ListView
	android:id="@+id/game_list"
	android:layout_below="@id/move_divider"
	android:layout_above="@id/botbar"/>
	<com.chess.genesis.MyImageView
	android:id="@+id/botbar"
	android:layout_alignParentBottom="true"
	android:src="@drawable/botbar"/>
</RelativeLayout>
