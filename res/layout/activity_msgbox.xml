<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android">
	<include
	layout="@layout/include_topbar"/>
	<ListView
	android:id="@+id/msg_list"
	android:layout_below="@id/topbar"
	android:layout_above="@+id/input_box"/>
	<TableRow
	android:id="@+id/input_box"
	android:layout_above="@+id/botbar">
		<com.chess.genesis.RobotoEditText
		android:id="@+id/new_msg"
		style="@style/FillWidth"
		android:layout_weight="82"
		android:maxLines="3"
		android:scrollbars="horizontal"
		android:inputType="textCapSentences|textMultiLine"
		android:maxLength="320"/>
		<com.chess.genesis.MyImageView
		android:id="@+id/submit_msg"
		style="@style/FillWidth"
		android:layout_weight="180"
		android:layout_gravity="center"
		android:src="@drawable/btn_rsubmit"/>
	</TableRow>
	<include
	layout="@layout/include_botbar"
	android:layout_alignParentBottom="true"/>
</RelativeLayout>
