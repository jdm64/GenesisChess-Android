<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android">
	<include
	layout="@layout/include_topbar"/>
	<com.chess.genesis.RobotoText
	android:id="@+id/welcome"
	android:layout_below="@id/topbar"
	android:paddingLeft="6dp"
	android:paddingBottom="3dp"
	android:textStyle="bold"
	android:textSize="15dp"/>
	<TableLayout
	android:layout_below="@id/welcome"
	android:shrinkColumns="*"
	android:stretchColumns="*">
		<TableRow>
			<FrameLayout>
				<com.chess.genesis.MyImageView
				android:id="@+id/local_game"
				android:padding="12dp"
				android:src="@drawable/main_local"/>
				<com.chess.genesis.RobotoText
				android:id="@+id/local_game_txt"
				android:layout_gravity="bottom|center_horizontal"
				android:text="Local Play"/>
			</FrameLayout>
			<FrameLayout>
				<com.chess.genesis.MyImageView
				android:id="@+id/online_game"
				android:padding="12dp"
				android:src="@drawable/main_online"/>
				<com.chess.genesis.RobotoText
				android:id="@+id/online_game_txt"
				android:layout_gravity="bottom|center_horizontal"
				android:text="Online Matches"/>
			</FrameLayout>
			<FrameLayout>
				<com.chess.genesis.MyImageView
				android:id="@+id/user_stats"
				android:padding="12dp"
				android:src="@drawable/main_stats"/>
				<com.chess.genesis.RobotoText
				android:id="@+id/archive_game_txt"
				android:layout_gravity="bottom|center_horizontal"
				android:text="User Stats"/>
			</FrameLayout>
		</TableRow>
		<TableRow>
			<FrameLayout>
				<com.chess.genesis.MyImageView
				android:id="@+id/howtoplay"
				android:padding="12dp"
				android:src="@drawable/main_howto"/>
				<com.chess.genesis.RobotoText
				android:id="@+id/howtoplay_txt"
				android:layout_gravity="bottom|center_horizontal"
				android:text="How To Play"/>
			</FrameLayout>
			<FrameLayout>
				<com.chess.genesis.MyImageView
				android:id="@+id/settings"
				android:padding="12dp"
				android:src="@drawable/main_settings"/>
				<com.chess.genesis.RobotoText
				android:id="@+id/settings_txt"
				android:layout_gravity="bottom|center_horizontal"
				android:text="Settings"/>
			</FrameLayout>
			<FrameLayout>
				<com.chess.genesis.MyImageView
				android:id="@+id/feedback"
				android:padding="12dp"
				android:src="@drawable/main_feedback"/>
				<com.chess.genesis.RobotoText
				android:id="@+id/feedback_txt"
				android:layout_gravity="bottom|center_horizontal"
				android:text="Submit Feedback"/>
			</FrameLayout>
		</TableRow>
		<TableRow>
			<FrameLayout>
				<com.chess.genesis.MyImageView
				android:id="@+id/login"
				android:padding="12dp"
				android:src="@drawable/main_login"/>
				<com.chess.genesis.RobotoText
				android:id="@+id/login_txt"
				android:layout_gravity="bottom|center_horizontal"
				android:text="Login/Register"/>
			</FrameLayout>
		</TableRow>
	</TableLayout>
	<TableRow
	android:id="@+id/layout01"
	android:paddingBottom="3dp"
	android:layout_above="@id/botbar">
		<com.chess.genesis.MyImageView
		android:id="@+id/likefacebook"
		android:layout_weight="50"
		android:padding="3dp"
		android:src="@drawable/facebook"/>
		<com.chess.genesis.MyImageView
		android:id="@+id/googleplus"
		android:layout_weight="50"
		android:padding="3dp"
		android:src="@drawable/googleplus"/>
	</TableRow>
	<com.chess.genesis.RobotoText
	android:id="@+id/beta"
	android:layout_above="@id/layout01"
	android:layout_alignParentRight="true"
	android:paddingRight="3dp"
	android:textSize="10dp"
	android:text="Beta"/>
	<com.chess.genesis.RobotoText
	android:layout_above="@id/layout01"
	android:layout_toLeftOf="@id/beta"
	android:paddingRight="3dp"
	android:textSize="10dp"
	android:text="@string/version"/>
	<include
	layout="@layout/include_botbar"
	android:layout_alignParentBottom="true"/>
</RelativeLayout>
