<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:panel="http://schemas.android.com/apk/res/com.chess.genesis"
android:orientation="vertical">
	<com.chess.genesis.view.ManualPanel
	android:id="@+id/board_names"
	panel:sizes="1/2"
	android:background="#ff383838">
		<com.chess.genesis.view.TabText
		android:id="@+id/white_name"
		android:gravity="center"
		android:padding="6dp"
		android:textSize="14sp"/>
		<com.chess.genesis.view.TabText
		android:id="@+id/black_name"
		android:gravity="center"
		android:padding="6dp"
		android:textSize="14sp"/>
	</com.chess.genesis.view.ManualPanel>
	<ViewFlipper
	style="@style/FillWidth"
	android:id="@+id/board_flip">
		<com.chess.genesis.view.BoardLayout
		android:layout_gravity="top|center_horizontal"
		android:id="@+id/board_layout"/>
		<com.chess.genesis.view.PlaceLayout
		android:layout_gravity="top|center_horizontal"
		android:id="@+id/place_layout"/>
	</ViewFlipper>
	<com.chess.genesis.view.CapturedLayout
	android:id="@+id/captured_count"
	panel:height_policy="exact_child"
	panel:sizes="1/11"/>
</LinearLayout>
