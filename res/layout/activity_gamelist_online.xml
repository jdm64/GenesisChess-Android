<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android">
	<include
	layout="@layout/include_topbar_plus"
	style="@style/BlueBar"/>
	<FrameLayout
	android:id="@+id/layout02"
	style="@style/FillWidth"
	android:layout_below="@id/topbar_and_plus">
		<com.chess.genesis.RobotoText
		android:id="@+id/game_search"
		style="@style/FillWidth"
		android:padding="4dp"
		android:layout_gravity="center"
		android:gravity="center"
		android:textSize="16dp"
		android:text="Searching For Opponents..."/>
	</FrameLayout>
	<com.chess.genesis.SwipeTabs
	android:id="@+id/swipetabs"
	android:layout_below="@id/layout02"
	style="@style/FillWidth"
	android:background="#ff383838"/>
	<android.support.v4.view.ViewPager
	android:id="@+id/swipe_list"
	android:layout_below="@id/swipetabs"
	android:layout_above="@id/botbar"/>
	<include
	layout="@layout/include_botbar"
	android:layout_alignParentBottom="true"/>
</RelativeLayout>
