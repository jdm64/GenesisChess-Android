<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content">
	<TableRow
	android:id="@+id/table_01"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
		<ImageView
		android:id="@+id/topbar_genesis"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:layout_weight="74"
		android:scaleType="centerCrop"
		android:src="@drawable/topbar_genesis" />
		<ImageView
		android:id="@+id/topbar_plus"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:layout_weight="407"
		android:scaleType="centerCrop"
		android:src="@drawable/topbar_plus" />
	</TableRow>
	<ListView
	android:id="@+id/game_list"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_below="@id/table_01"
	android:layout_above="@+id/botbar" />
	<ImageView
	android:id="@+id/botbar"
	android:adjustViewBounds="true"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:src="@drawable/botbar"
	android:layout_alignParentBottom="true" />
</RelativeLayout>