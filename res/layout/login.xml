<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android">
	<com.chess.genesis.MyImageView
	android:id="@+id/topbar"
	style="@style/FillWidth"
	android:layout_span="2"
	android:src="@drawable/topbar"/>
	<TableLayout
	android:id="@+id/table01"
	android:layout_below="@id/topbar"
	android:shrinkColumns="*"
	android:stretchColumns="1">
		<TableRow>
			<TextView
			android:padding="12dp"
			android:text="User Name:"/>
			<EditText
			android:id="@+id/username"
			style="@style/FillWidth"
			android:singleLine="true"
			android:maxLength="16"/>
		</TableRow>
		<TableRow>
			<TextView
			android:padding="12dp"
			android:text="Password:"/>
			<EditText
			android:id="@+id/password"
			style="@style/FillWidth"
			android:singleLine="true"
			android:maxLength="22"
			android:password="true"/>
		</TableRow>
	</TableLayout>
	<Button
	android:id="@+id/logout"
	android:width="120dp"
	android:layout_below="@id/table01"
	android:layout_alignLeft="@id/table01"
	android:text="Logout"/>
	<Button
	android:id="@+id/login"
	android:width="120dp"
	android:layout_below="@id/table01"
	android:layout_alignRight="@id/table01"
	android:text="Login"/>
	<Button
	android:id="@+id/register"
	style="@style/FillWidth"
	android:layout_above="@id/botbar"
	android:text="Register"/>
	<com.chess.genesis.MyImageView
	android:id="@+id/botbar"
	style="@style/FillWidth"
	android:layout_alignParentBottom="true"
	android:src="@drawable/botbar"/>
</RelativeLayout>
