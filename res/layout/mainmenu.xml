<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android">
	<com.chess.genesis.MyImageView
	android:id="@+id/topbar"
	style="@style/FillWidth"
	android:src="@drawable/topbar"/>
	<Button
	android:id="@+id/local_game"
	style="@style/FillWidth"
	android:layout_below="@id/topbar"
	android:text="Local Game"/>
	<Button
	android:id="@+id/online_game"
	style="@style/FillWidth"
	android:layout_below="@id/local_game"
	android:text="Online Game"/>
	<Button
	android:id="@+id/login"
	style="@style/FillWidth"
	android:layout_below="@id/online_game"
	android:text="Login"/>
	<com.chess.genesis.MyImageView
	style="@style/FillWidth"
	android:layout_alignParentBottom="true"
	android:src="@drawable/botbar"/>
</RelativeLayout>
